project cs_oss
: requirements
  <cxxstd>17
: default-build
# <variant>release
  <address-model>64
  <debug-symbols>on
;

use-project /cuti : cuti/cuti ;

build-project cuti/cuti ;
build-project x264_encoding_service ;

explicit unit_tests ;
alias unit_tests : cuti/unit_tests ;

# To get executable-relative RUNPATHs, use (bash)
# b2 hardcode-dll-paths=true dll-path="'\$ORIGIN/../lib'" --prefix=<prefix> install
explicit install ;
alias install : x264_encoding_service//install ;
