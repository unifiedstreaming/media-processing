import os ;
import errors ;

if [ os.environ stage-dir ] = ""
{
  errors.error "stage-dir must be set" ;
}
path-constant stage-dir : [ os.environ stage-dir ] ;

project oss
: requirements
  <cxxstd>17
  <debug-symbols>on
  <toolset>msvc:<cxxflags>/wd4251 # class needs to have dll-interface 
  <toolset>msvc:<cxxflags>/wd4275 # non dll-interface class used as base
  <toolset>msvc:<cxxflags>/wd4910 # dllexport on extern template
  <target-os>windows:<define>NOMINMAX
  <target-os>windows:<define>WIN32_LEAN_AND_MEAN
  <threading>multi
  <target-os>linux:<linkflags>-Wl,--enable-new-dtags
  <target-os>linux:<linkflags>-Wl,-rpath,\\$ORIGIN/../lib
: default-build
# <variant>release
  <address-model>64
;

rule dist-dll-location ( properties * )
{
  local result ;

  local dest-dir = [ os.environ dest-dir ] ;
  if $(dest-dir) != ""
  {
    local dll-subdir = lib ;
    if [ os.name ] = NT
    {
      dll-subdir = bin ;
    }

    result = <location>$(dest-dir)/$(dll-subdir) ;
  }

  return $(result) ;
}

rule dist-exe-location ( properties * )
{
  local result ;

  local dest-dir = [ os.environ dest-dir ] ;
  if $(dest-dir) != ""
  {
    result = <location>$(dest-dir)/bin ;
  }

  return $(result) ;
}
