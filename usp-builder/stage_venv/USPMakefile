#
# This makefile creates a Python virtual environment in the staging
# directory, initially containing recent versions of pip, setuptools,
# and wheel.  It is intended to be used as an environment providing
# these tools, and for running unit tests.
#

#
# Downstream projects must rebuild when
# $(stage-dir)/timestamps/stage_venv has been touched.
#

stage-venv-makefile := $(lastword $(MAKEFILE_LIST))
stage-venv-src-dir := $(abspath $(dir $(stage-venv-makefile)))

include usp-builder/USPStageVenv.mki

requirements-file := $(stage-venv-src-dir)/requirements.txt

$(if $(work-dir),,$(error work-dir must be set))

.PHONY: all
all:

.PHONY: stage
stage: $(stage-dir)/timestamps/stage_venv

.PHONY: deploy
deploy:

$(stage-dir)/timestamps/stage_venv: \
  $(stage-venv-makefile) $(requirements-file) | $(work-dir)
	$(usp-rm-dir) "$(call to-shell,$(stage-venv-dir))"
	$(usp-system-python) -m venv "$(call to-native,$(stage-venv-dir))"
	cd "$(call to-shell,$(work-dir))" && $(stage-venv-pip) \
	  install --no-cache --progress-bar off --upgrade \
	  --requirement "$(call to-native,$(requirements-file))"
	echo timestamp >"$(call to-shell,$@)"

$(work-dir):
	$(usp-mkdir-p) "$(call to-shell,$@)"
