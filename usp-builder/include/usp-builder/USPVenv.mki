include usp-builder/USPCommon.mki

#
# Common stuff for the Python venv in $(stage-dir)
#

override stage-dir := $(call required-value,stage-dir)
venv-dir := $(stage-dir)/venv
venv-bin-dir := $(venv-dir)/$(if $(windows),Scripts,bin)
venv-python := $(venv-bin-dir)/python
venv-pip := $(venv-python) -m pip $(if $(verbose),--verbose)

