#
# $(call package-impl,<package name>,<license>,<doc file>*,<conf file template>*,<service file template>*,<openrc file template*>)
#
define package-impl =
#
# Attributes for package '$1'
#

all-packages := $$(call add-package,$$(all-packages),$(call checked-package-name,$1))

$1.package-license := $2
$1.package-doc-files := $3
$1.package-conf-files := $4
$1.package-service-files := $5
$1.package-openrc-files := $6

endef

#
# $(call package,<properties>)
#
# properties are:
# name            package name
# license         package license
# doc-files*      package-specific documentation files/templates
# conf-files*     package-specific config files/templates
# service-files*  package-specific systemd service files/templates
# openrc-files*   package-specific openrc init files/templates
#
package-keys := \
  name \
  license \
  doc-files \
  conf-files \
  service-files \
  openrc-files
  
package = $(call expand,$(call call-stripped, \
  package-impl, \
  $(call get-value,name,$1,$(package-keys)), \
  $(call get-value,license,$1,$(package-keys)), \
  $(call check-duplicate-basenames,$(call find-values,doc-files,$1,$(package-keys))), \
  $(call check-duplicate-basenames,$(call find-values,conf-files,$1,$(package-keys))), \
  $(call check-duplicate-basenames,$(call find-values,service-files,$1,$(package-keys))), \
  $(call check-duplicate-basenames,$(call find-values,openrc-files,$1,$(package-keys))) \
))

#
# Clear the lists of projects and packages just before reading the
# project definition file
#
all-projects :=
all-packages :=
