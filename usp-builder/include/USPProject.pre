#
# $(call bjam-exe-project-impl,<name>,<source dir>,<prereq name>*,<package>?)
#
define bjam-exe-project-impl =
#
# $1 (bjam exe project)
#
all-projects := $$(call add-project,$$(all-projects),$1)

$1.version := 
$1.prereqs := $3
$1.distributable := yes
$1.package := $4

.PHONY: $1
$1: $1.all

.PHONY: $1.all
$1.all: build-dir-skeleton $(addsuffix .stage,$3)
	$(usp-bjam) $$(call bjam-options,$1) $(build-settings) $2

.PHONY: $1.dist
$1.dist: $1.all $(addsuffix .dist,$3)
	$(usp-bjam) $$(call bjam-dist-options,$1) $(build-settings) $2//dist

PHONY: $1.project-artifacts
$1.project-artifacts: $1.all
	$(usp-bjam) $$(call bjam-package-options,$1) $(build-settings) $2//dist

.PHONY: $1.clean
$1.clean:
