import os ;
import errors ;

constant BUILD_SETTINGS_SUFFIX : [ os.environ build-settings-suffix ] ;

if [ os.environ cuti.version ] = ""
{
  errors.error cuti.version must be set ;
}
constant CUTI_VERSION : [ os.environ cuti.version ] ;

alias cuti : cuti$(BUILD_SETTINGS_SUFFIX)_$(CUTI_VERSION) ;

lib cuti$(BUILD_SETTINGS_SUFFIX)_$(CUTI_VERSION)
:
  add_handler.cpp
  args_reader.cpp
  async_readers.cpp
  async_writers.cpp
  bound_inbuf.cpp
