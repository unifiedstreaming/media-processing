:
  <define>BUILDING_CUTI
  <link>shared
  <visibility>hidden
  <target-os>windows:<find-shared-library>advapi32
  <target-os>windows:<find-shared-library>ws2_32
:
:
  <include>..
; 

explicit stage ;
install stage
:
  cuti
:
  <install-dependencies>off
  <location>$(stage-dir)/lib
;

explicit dist ;
install dist
:
  cuti
:
  <install-dependencies>off
  <install-type>SHARED_LIB
  <install-type>PDB
  <conditional>@dist-dll-location
;

